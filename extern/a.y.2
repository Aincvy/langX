program
	: program statement
	| 
	;

statement
	: expr ';'
	;

//  表达式， 单条语句 
expr
	: '(' expr ')'
	| NUMBER  { $$ = $1; }
	| VARIABLE { $$ = getNumberValue($1->name); }
	| arithmetic_expression
	| 
	;

//  算术表达式 
arithmetic_expression
	: expr '+' arithmetic_expression { $$ = $1 + $3 }
	| value_expression '-' arithmetic_expression { $$ = $1 - $3 }
	| value_expression '*' arithmetic_expression { $$ = $1 * $3 }
	| value_expression '/' arithmetic_expression { $$ = $1 / $3 }
	;